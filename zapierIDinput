<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lunch Break Timestamp</title>
    <script>
        function sendTimestamp() {
            let action = confirm("Click OK for IN, Cancel for OUT");
            let name = prompt("Enter your name:");
            
            if (name) {
                let url = "https://hooks.zapier.com/hooks/catch/22170888/2e9nwpd/";
                let method = action ? "POST" : "DELETE";
                let timestamp = new Date().toISOString();
                let data = action ? { name: name, timestamp: timestamp } : { name: name };
                
                fetch(url, {
                    method: method,
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(data => alert(action ? "Timestamp recorded successfully!" : "Record deleted successfully!"))
                .catch(error => alert("Error processing request."));
            }
        }
    </script>
</head>
<body>
    <button onclick="sendTimestamp()">Record Lunch Break</button>
</body>
</html>
