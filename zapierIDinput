<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lunch Break Timestamp</title>
    <script>
        function sendTimestamp() {
            let id = prompt("Enter your ID number:");
            if (id) {
                let timestamp = new Date().toISOString();
                
                fetch("https://hooks.zapier.com/hooks/catch/22170888/2e9nwpd/", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ id: id, timestamp: timestamp })
                })
                .then(response => response.json())
                .then(data => alert("Timestamp recorded successfully!"))
                .catch(error => alert("Error sending data."));
            }
        }
    </script>
</head>
<body>
    <button onclick="sendTimestamp()">Record Lunch Break</button>
</body>
</html>
